@model IEnumerable<CreativeCollab_yj_sy.Models.RestaurantDto>
@{
    ViewBag.Title = "List";
}


<h2 style="margin-bottom:32px;">Restaurant List</h2>
<table class="border" style="width: 100%;">
    <thead>
        <tr class="bg-light">
            <th style="padding:10px; width: 100%">Restaurant Name</th>
            @if (User.IsInRole("Admin"))
            {
                <th style="padding:10px;">Edit</th>
                <th style="padding:10px;">Delete</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var Restaurant in Model)
        {
            <tr>
                <td style="padding:10px;">
                    <a style="text-decoration:none; color:black;" href="/Restaurant/Details/@Restaurant.RestaurantID">@Restaurant.RestaurantName</a>
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td style="padding:10px;">
                        <a href="/Restaurant/Edit/@Restaurant.RestaurantID" class="btn btn-primary">Edit</a>
                    </td>
                    <td style="padding:10px;">
                        <a href="/Restaurant/DeleteConfirm/@Restaurant.RestaurantID" class="btn btn-danger">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
@if (User.IsInRole("Admin"))
{
    <div style="display:flex; justify-content:space-between;" class="mt-3">
        <a href="/Restaurant/New" class="btn btn-light border border-1">New Restaurant</a>
    </div>
}