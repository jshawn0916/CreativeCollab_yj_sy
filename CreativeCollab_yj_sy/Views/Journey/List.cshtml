@model IEnumerable<CreativeCollab_yj_sy.Models.JourneyDto>
@{
    ViewBag.Title = "List";
}


<h2 style="margin-bottom:32px;">Journey List</h2>
<table class="border" style="width: 100%;">
    <thead>
        <tr class="bg-light">
            <th style="padding:10px; width: 100%">Journey Name</th>
            <th style="padding:10px;">Edit</th>
            <th style="padding:10px;">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Journey in Model)
        {
            <tr>
                <td style="padding:10px;">
                    <a style="text-decoration:none; color:black;" href="/Journey/Details/@Journey.JourneyID">@Journey.JourneyName</a>
                </td>
                <td style="padding:10px;">
                    <a href="/Journey/Edit/@Journey.JourneyID" class="btn btn-primary">Edit</a>
                </td>
                <td style="padding:10px;">
                    <a href="/Journey/DeleteConfirm/@Journey.JourneyID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div style="display:flex; justify-content:space-between;" class="mt-3">
    <a href="/Journey/New" class="btn btn-light border border-1">New Journey</a>
</div>